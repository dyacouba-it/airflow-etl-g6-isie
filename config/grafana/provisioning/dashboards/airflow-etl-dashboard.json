{
  "id": null,
  "uid": "airflow-etl-monitoring",
  "title": "Monitoring ETL Airflow",
  "tags": ["airflow", "etl", "monitoring"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "5s",
  "panels": [
    {
      "id": 1,
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      },
      "type": "stat",
      "title": "Statut des Services",
      "description": "État des services (1 = actif, 0 = inactif)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "up",
          "refId": "A",
          "legendFormat": "{{job}}"
        }
      ],
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "textMode": "value_and_name"
      },
      "fieldConfig": {
        "defaults": {
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": 0,
                "color": "red"
              },
              {
                "value": 1,
                "color": "green"
              }
            ]
          },
          "unit": "none"
        }
      }
    },
    {
      "id": 2,
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      },
      "type": "timeseries",
      "title": "Durée de Collecte des Métriques",
      "description": "Temps nécessaire pour collecter les métriques",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "scrape_duration_seconds",
          "refId": "A",
          "legendFormat": "{{job}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10
          }
        }
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      }
    },
    {
      "id": 3,
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 8
      },
      "type": "timeseries",
      "title": "Métriques Prometheus - Échantillons/seconde",
      "description": "Nombre d'échantillons collectés par seconde",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "rate(prometheus_tsdb_head_samples_appended_total[5m])",
          "refId": "A",
          "legendFormat": "Échantillons/sec"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 20
          },
          "color": {
            "mode": "palette-classic"
          }
        }
      }
    },
    {
      "id": 4,
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 8
      },
      "type": "stat",
      "title": "Temps de Disponibilité",
      "description": "Temps depuis le démarrage de Prometheus",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "time() - process_start_time_seconds{job=\"prometheus\"}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": 0,
                "color": "green"
              }
            ]
          }
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area"
      }
    }
  ],
  "time": {
    "from": "now-1h",
    "to": "now"
  }
}